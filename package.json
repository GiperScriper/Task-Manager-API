{
  "name": "task-manager-api",
  "version": "0.0.1",
  "description": "tasks manager api",
  "main": "./src/app.js",
  "scripts": {
    "start": "nodemon ./src/app.js",
    "test": "\"SET NODE_ENV=test\" && mocha ./src/**/*.test.js",
    "test-watch": "nodemon --exec \"npm test\""
  },
  "author": "Nikolay Martynov",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-plugin-import": "^2.2.0",
    "expect": "^1.20.2",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "supertest": "^3.0.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "mocha": true,
      "node": true
    },
    "globals": {
      "include": true
    },
    "rules": {
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error",
            "log"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "body-parser": "^1.17.1",
    "express": "^4.15.2",
    "lodash": "^4.17.4",
    "mongoose": "^4.9.4"
  }
}
